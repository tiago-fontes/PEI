FROM openjdk:11-jdk-slim

ARG DB_IP
ENV DB_IP=$DB_IP

ARG DB_USER
ENV DB_USER=$DB_USER

ARG DB_PASSWORD
ENV DB_PASSWORD=$DB_PASSWORD

ARG DB_DATABASE
ENV DB_DATABASE=$DB_DATABASE

ARG DATALAKE_URL
ENV DATALAKE_URL=$DATALAKE_URL

EXPOSE 8080

ARG JAR_FILE=target/ridecare-0.0.1-SNAPSHOT.jar

COPY ${JAR_FILE} app.jar

ENTRYPOINT ["java","-jar","/app.jar"]